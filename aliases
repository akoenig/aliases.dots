# Jump to project directory
alias p="cd $HOME/projects"

# Shorter "git" :)
alias g="git"
alias gpom="git push origin master"
alias gpod="git push origin develop"
alias gp="git push"
alias gpoc="git rev-parse --abbrev-ref HEAD | xargs git push origin"
alias gclog="git log --oneline --decorate"
alias gup="git rev-parse --abbrev-ref HEAD | xargs git pull origin"
alias t="tig"

# Whats my ip address, mate?
alias ip="curl ip.appspot.com"

# Shorter vim
alias v="vim"

# better ll
alias ll="ls -lah"

# npm
alias ni='npm install'
alias nis='npm install --save'
alias nid='npm install --save-dev'
alias nig='npm install --global'
alias nt='npm test'
alias nit='npm install && npm test'
alias nk='npm link'
alias nr='npm run'
alias nf='npm cache clean && rm -rf node_modules && npm install'
